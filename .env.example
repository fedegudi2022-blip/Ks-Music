# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Obtén tus credenciales en: https://developer.spotify.com/dashboard
# Habilita: Nombre, Email, Aceptar términos
# ID de cliente y secreto para obtener token
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
